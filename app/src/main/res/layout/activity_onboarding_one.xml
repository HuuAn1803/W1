<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingOne">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imgPeople"
            android:layout_width="390dp"
            android:layout_height="560"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/peopleonboarding"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="-83dp" />
        <ImageView
            android:src="@drawable/starbuck"
            android:layout_marginTop="5dp"
            android:layout_marginRight="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <ImageView
            android:src="@drawable/pizzahut"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <ImageView
            android:src="@drawable/burgerking"
            android:layout_marginTop="195dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <ImageView
            android:src="@drawable/jjjjjjj"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <ImageView
            android:src="@drawable/kfc"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:text="Browse your menu"
            android:textSize="40sp"
            android:textColor="#131A38"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="and order directly"
            android:textSize="40sp"
            android:textColor="#131A38"
            android:layout_marginTop="370dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Our app can send you everywhere, even"
            android:textSize="16sp"
            android:textColor="#616772"
            android:layout_marginTop="470dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>